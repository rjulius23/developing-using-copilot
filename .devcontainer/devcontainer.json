{
    "name": "C++ Development Container",
    "dockerFile": "Dockerfile",
    "customizations": {
        "vscode": {
            "settings": {
                "terminal.integrated.shell.linux": "/bin/bash"
            },
            "extensions": [
                "ms-vscode.cpptools",
                "ms-vscode.cmake-tools",
                "twxs.cmake",
                "vector-of-bool.cmake-tools",
                "github.copilot",
                "ms-vscode.cpptools-extension-pack"
            ]
        }
    },
    "postCreateCommand": "sudo apt-get update && sudo apt-get install -y cmake libgtest-dev && cd /usr/src/gtest && sudo cmake CMakeLists.txt && sudo make && sudo cp *.a /usr/local/lib",
    "remoteUser": "vscode"
}